---
import { SITE_TITLE } from '../config'
import HeaderLink from './HeaderLink.vue'
---

<header>
	<div class="upper-navbar container">
		<div class="header-nav">
			<nav>
				<HeaderLink to="/" title="Pàgina principal">
					<img src="/images/home.svg" alt="Home logo">
				</HeaderLink>
				<HeaderLink to="/onsom" title="On Som?">
					<img src="/images/location.svg" alt="Location logo">
				</HeaderLink>
				<HeaderLink to="/noticies" title="Noticies">
					<img src="/images/news.svg" alt="News logo" class="news-logo">
				</HeaderLink>
				<HeaderLink to="/equips" title="Equips">
					<img src="/images/team.svg" alt="Team logo" class="team-logo">
				</HeaderLink>
				<HeaderLink to="/historia" title="Història">
					<img src="/images/history.svg" alt="History logo" class="history-logo">
				</HeaderLink>
				<HeaderLink to="https://twitter.com/CreuAltaBasquet" target="_blank" title="Twitter">
					<img src="/images/twitter.svg" alt="Twitter logo">
				</HeaderLink>
				<HeaderLink to="https://www.instagram.com/creualtabasquet" target="_blank" title="Instagram">
					<img src="/images/instagram.svg" alt="Instagram logo">
				</HeaderLink>
				<HeaderLink to="mailto:secretaria@creualtabasquet.cat" target="_blank" title="Email">
					<img src="/images/mail.svg" alt="Mail logo">
				</HeaderLink>	
			</nav>
			
			<h1><a href="/">{SITE_TITLE}</a></h1>
		</div>
	</div>
</header>

<style lang="scss">
	header {
		background: var(--color-bg);
		width: 100%;
		padding-top: 0.5rem;
		margin: 0;
	}
	.team-logo {
		color: white;
	}
	.upper-navbar {
		background: transparent url('/images/escut_casb.png') no-repeat left;
		background-position: 0.5rem 0.5rem;
		background-size: 70px 70px;
		display: flex;
		flex-direction: row;
		
		.header-nav {
			width: 100%;
		}
		nav {
			display: flex;
			flex-direction: row;
			justify-content: end;
			width: 100%;
			height: 32px;
			gap: 1rem;
			
			img {
				&:hover {
					filter: invert(1);
				}
				width: 32px;
			}

		}
		h1 {
			font-family: 'Helvetica', sans-serif;
			text-align: center;
			text-shadow: 2px 1px #000000;
			margin-top: 0;
			margin-bottom: 0.5rem;
			a {
				color: white;
				font-size: 1.5rem;
			}
		}
	}

	@media (min-width: 600px) {
		.upper-navbar {
			background-size: 114px 110px;

			header {
				padding-top: 2rem;
			}
			h1 {
				margin-top: 2rem;
				margin-bottom: 1rem;
				a {
					font-size: 3rem;
				}
			} 
		}
	}
</style>
