---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../config'
---

<header>
	<div class="upper-navbar container">
		<div class="header-nav">
			<nav>
				<HeaderLink href="/">
					<img src="/images/home.svg" alt="Home logo">
				</HeaderLink>
				<HeaderLink href="/onsom" title="On Som?">
					<img src="/images/location.svg" alt="Location logo">
				</HeaderLink>
				<HeaderLink href="/noticies" title="Noticies">
					<img src="/images/news.svg" alt="News logo" class="news-logo">
				</HeaderLink>
				<HeaderLink href="/equips" title="Equips">
					<img src="/images/team.svg" alt="Team logo" class="team-logo">
				</HeaderLink>
				<HeaderLink href="/historia" title="Historia">
					<img src="/images/history.svg" alt="History logo" class="history-logo">
				</HeaderLink>
				<HeaderLink href="https://twitter.com/CreuAltaBasquet" target="_blank" title="Twitter">
					<img src="/images/twitter.svg" alt="Twitter logo">
				</HeaderLink>
				<HeaderLink href="https://www.instagram.com/creualtabasquet" target="_blank" title="Instagram">
					<img src="/images/instagram.svg" alt="Instagram logo">
				</HeaderLink>
				<HeaderLink href="mailto:secretaria@creualtabasquet.cat" target="_blank" title="Email de Contacte">
					<img src="/images/mail.svg" alt="Mail logo">
				</HeaderLink>	
			</nav>
			
			<h1><HeaderLink href="/">{SITE_TITLE}</HeaderLink></h1>
		</div>
	</div>
</header>

<style lang="scss">
header {
	background: var(--color-bg);
	width: 100%;
	padding-top: 0.5rem;
	margin: 0;
}
.team-logo {
	color: white;
}
.upper-navbar {
	background: transparent url('/images/escut_casb.png') no-repeat left;
	background-position: 0.5rem 0.5rem;
	background-size: 70px 70px;
	display: flex;
	flex-direction: row;
	
	.header-nav {
		width: 100%;
	}
	nav {
		display: flex;
		flex-direction: row;
		justify-content: end;
		width: 100%;
		height: 32px;
		gap: 1rem;
		
		img {
			width: 32px;
		}
	}
	h1 {
		font-family: 'Helvetica', sans-serif;
		text-align: center;
		text-shadow: 2px 1px #000000;
		margin-top: 0;
		margin-bottom: 0.5rem;
		a {
			color: white;
			font-size: 1.5rem;
		}
	}
}

	@media (min-width: 600px) {
		.upper-navbar {
			background-size: 114px 110px;

			header {
				padding-top: 2rem;
			}
			h1 {
				margin-top: 2rem;
				margin-bottom: 1rem;
				a {
					font-size: 3rem;
				}
			} 
		}
	}
</style>
