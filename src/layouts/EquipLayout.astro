---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
    categoria: string;
		description: string;
    temporada: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
    fitxa?: string;
	};
}

const {
	content: { title, categoria, description, temporada, pubDate, updatedDate, heroImage, fitxa },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body {
				display: grid;
				grid-template-rows: auto 1fr auto;
			}
			.container {
				margin-bottom: 2rem;
			}
      article p span {
        text-transform: uppercase;
        color: #000;
      }
			hr {
  			border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main class="container">
      <h1>{title} - Temporada {temporada}</h1>

			<article>
        {heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt=""
					/>
				)}

        <p>Categoria: <span>{categoria}</span></p>
				{pubDate && <div>Publicació: <time>{pubDate}</time></div>}
				{updatedDate && <div>Ultima modificació: <time>{updatedDate}</time></div>}
				
        <hr/>
        {fitxa && (
          <a href={fitxa} target="_blank">Fitxa</a>
        )}
				<slot />
        
			</article>
      <a href="/equips">Altres equips</a>
		</main>
		<Footer />
	</body>
</html>
