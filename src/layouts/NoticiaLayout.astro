---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body {
				display: grid;
				grid-template-rows: auto 1fr auto;
			}
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
  			border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main class="container">
			<h1 class="title">{title}</h1>

			<article>
				{pubDate && <time>Publicat el {pubDate}</time>}
				{updatedDate && <div>Ultima modificaci√≥ <time>{updatedDate}</time></div>}
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt="Imatge de portada"
					/>
				)}
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
