---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="grid grid-rows-[auto_1fr_auto] min-h-screen">
		<Header />
		<main class="container">
			<h2>{title}</h2>

			<article>
				{pubDate && <time class="text-gray-500">Publicat el {pubDate}</time>}
				{updatedDate && <div>Ultima modificaci√≥ <time>{updatedDate}</time></div>}
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt="Imatge de portada"
						class="mx-auto"
					/>
				)}
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>

<style lang="scss">
	.title {
		font-size: 2em;
		margin: 0.25em 0 0;
	}
	hr {
		border-top: 1px solid #DDD;
		margin: 1rem 0;
	}
</style>